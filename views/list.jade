    tr
      td #{v.no}
      td 
        a(href="/p/edit/"+v._id) #{v.title}        
      td #{v.writer}
      td #{v.date}
      td #{v.hits}
      td #{v.file}
      td
        a(href="/p/delete/"+v._id) Delete
    - });